R2PM_BEGIN

R2PM_GIT "https://github.com/radareorg/radare2-release"
R2PM_DESC "[r2-tool] radare2 releasing machinery"

R2PM_INSTALL() {
	make CONFIG
	if [ "${GLOBAL}" = 1 ]; then
		make install
	else
		make install PREFIX=${R2PM_PREFIX}
	fi
}

R2PM_UNINSTALL() {
	make CONFIG
	if [ "${GLOBAL}" = 1 ]; then
		make uninstall
	else
		make uninstall PREFIX="${R2PM_PREFIX}"
	fi
}

R2PM_END
